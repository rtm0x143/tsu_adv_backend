@using System.Security.Claims
@model AdminPanel.ViewModels.ProfileViewModel

<div class="d-flex justify-content-between">
    <h2>Your Profile</h2>

    <a asp-controller="Auth" asp-action="Index">
        <button>
            Sign in another user
        </button>
    </a>
</div>

@Html.DisplayFor(model => model.UserProfile, "PropertyList")

<div class="RolesBlock">
    <strong>You have roles :</strong>
    @string.Join(", ", User.FindAll(ClaimTypes.Role).Select(claim => claim.Value))
</div>